<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/employee/css/employee.css">
    <title>Book Hotel</title>
</head>
<body>
 
    <%- include('../partials/menu') %>
    <div class="form">
        <div class="wrapper">
    <form action="/api/employee/booking" method="POST">
        
        <div class="credentials">
            <input type="text" id="phone-number" name="username" placeholder="username" required>
            <input type="text" id="phone-number" name="password" placeholder="password" required>
        </div>
        <div class="check-in">
            <label for="check-in">Check-in</label>
            <input type="date" id="check-in" name="check-in" required>
        </div>
        <div class="check-out">
            <label for="check-out">Check-out</label>
            <input type="date" id="check-out" name="check-out" required>
        </div>
        <div class="hotel">
            <label for="hotel">Hotel</label>
            <select id="hotel" name="hotel" required>
                <% hotelRooms.forEach(hotelRoom => { %>
                    <option value="<%= hotelRoom.room_id %>"><%= hotelRoom.room_name %></option>
               <%  }); %>
            </select>
        </div>
        
        <div class="btn">
            <button type="submit" class="btn">Book</button>
        </div>
    </form>
</div>
</div>
</body>
<script src="/employee/scripts/index.js"></script>

</html>