<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/employee/css/employee.css">
    <title>Hotels</title>
</head>
<body>
    <%- include('../partials/menu') %>

    <table class="hotel-table">
        <thead>
          <tr>
            <th>Room Name</th>
            <th>Capacity</th>
            <th> View </th>
          </tr>
        </thead>
        <tbody>
          <% hotels.forEach(hotel => { %>
            <tr>
              <td><%= hotel.room_name %></td>
              <td><%= hotel.room_capacity %></td>
              <td> <a href="room/<%= hotel.room_id %>"> <button> View Hotel </button> </a> </td>
            </tr>
          <% }) %>
        </tbody>
    </table>
    
</body>
<script src="/employee/scripts/index.js"></script>
</html>
